<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AddRoleFragment">


    <ImageView
        android:id="@+id/icon_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/back_arrow"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/lbl_add_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/signika_medium"
        android:text="Add Role"
        android:textColor="@color/medium_black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_back" />

    <TextView
        android:id="@+id/lbl_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="Name"
        android:textColor="@color/medium_black"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/lbl_description"
        app:layout_constraintTop_toBottomOf="@+id/lbl_add_role" />

    <TextView
        android:id="@+id/lbl_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="Description"
        android:textColor="@color/medium_black"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_name" />

    <TextView
        android:id="@+id/lbl_operations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="Operations"
        android:textColor="@color/medium_black"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_description" />




    <EditText
        android:id="@+id/edt_name"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:paddingStart="10dp"
        android:paddingEnd="8dp"
        app:layout_constraintStart_toEndOf="@+id/lbl_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lbl_name"
        app:layout_constraintBottom_toBottomOf="@+id/lbl_name"
        android:background="@drawable/edittext_bg"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <EditText
        android:id="@+id/edt_desc"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:paddingStart="10dp"
        android:paddingEnd="8dp"
        app:layout_constraintStart_toEndOf="@+id/lbl_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lbl_description"
        app:layout_constraintBottom_toBottomOf="@+id/lbl_description"
        android:background="@drawable/edittext_bg"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/edt_operations_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="@drawable/edittext_bg"
        android:gravity="center"
        android:hint="click to select"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/lbl_operations"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lbl_operations"
        android:layout_marginStart="11dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="@+id/lbl_operations" />

    <Button
        android:id="@+id/btn_add_role"
        android:layout_width="90dp"
        android:layout_height="42dp"
        android:background="@drawable/btn_save_bg"
        android:drawableStart="@drawable/icon_add"
        android:paddingStart="12dp"
        android:paddingEnd="10dp"
        android:text="Add"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_operations_result"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>