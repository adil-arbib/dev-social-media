<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:fontFamily="@font/signika_light"
        android:text="view-operations"
        android:textColor="@color/medium_black"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="20dp"/>

    <ImageView
        android:id="@+id/icon_view"
        android:layout_width="30dp"
        android:layout_height="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/btn_save_bg"
        app:layout_constraintEnd_toStartOf="@+id/icon_delete"
        android:layout_marginEnd="10dp"
        android:padding="2dp"
        android:src="@drawable/view"   />

    <ImageView
        android:id="@+id/icon_delete"
        android:layout_width="30dp"
        android:layout_height="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/btn_delete_bg"
        android:padding="3dp"
        android:src="@drawable/white_trash"   />

</androidx.constraintlayout.widget.ConstraintLayout>